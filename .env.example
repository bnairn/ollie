# OLLIE Configuration
# Copy this to .env and fill in your values

# OpenWeatherMap (free tier available)
OPENWEATHERMAP_API_KEY=your_key_here

# News API (free tier: 100 requests/day)
NEWSAPI_KEY=your_key_here

# AeroAPI (FlightAware)
AEROAPI_KEY=your_key_here

# Google Maps / OpenRouteService for travel times
OPENROUTESERVICE_API_KEY=your_key_here

# Spoonacular for recipes (free tier: 150 requests/day)
SPOONACULAR_API_KEY=your_key_here

# Anthropic API (for Claude fallback skill)
ANTHROPIC_API_KEY=your_key_here

# Location defaults
DEFAULT_LOCATION=Edgewood, WA
DEFAULT_LAT=47.2540
DEFAULT_LON=-122.2937

# LLM Settings
LLM_MODEL_PATH=./models/phi-3-mini-4k-instruct-q4.gguf
LLM_CONTEXT_SIZE=2048
LLM_MAX_TOKENS=256
